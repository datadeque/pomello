// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum OwnerType {
  USER
  TEAM
}

model OwnerEntity {
  id       Int       @id @unique @default(autoincrement())
  name     String    @unique
  user     User?
  type     OwnerType
  projects Project[]

  @@unique([id, name], name: "OwnerEntity_id_name_key")
}

model User {
  owner     OwnerEntity @relation(fields: [id], references: [id])
  id        Int         @id @unique
  createdAt DateTime    @default(now())
  email     String      @unique
  username  String      @unique
  password  String
}

model Project {
  id            Int         @id @unique @default(autoincrement())
  name          String
  description   String
  ownerName     String
  public        Boolean?    @default(false)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  OwnerEntity   OwnerEntity @relation(fields: [ownerEntityId, ownerName], references: [id, name])
  ownerEntityId Int
  nodes         Node[]

  @@unique([ownerName, name], name: "Project_ownerName_name_key")
  @@unique([ownerEntityId, name], name: "Project_ownerEntityId_name_key")
}

model Node {
  id        String   @id @unique @default(uuid())
  position  String
  data      Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  projectId Int
  type      NodeType
}

enum NodeType {
  BAR
  PIE
  SCATTER
  LINE
  TEXT
}
